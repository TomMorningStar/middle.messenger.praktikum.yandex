<div class='profle-page-wrapper'>
  <div
    onclick="window.renderPage('homePage')"
    class='back-button-wrapper cursor-pointer'
  >
    <div class='back-button'>{{>leftButtonBackToHome}}</div>
  </div>
  <div class='info-profile-wrapper-block'>
    <div class='profile-avatar'>
        {{>profileAvatar}}
    </div>
    <div><h3>Иван</h3></div>
    <div class="profile-info-block">
      {{>info key='Почта' value='pochta@yandex.ru'}}
      {{>info key='Логин' value='ivanivanov'}}
      {{>info key='Имя' value='Иван'}}
      {{>info key='Фамилия' value='Иванов'}}
      {{>info key='Имя в чате' value='Иван'}}
      {{>info key='Телефон' value='+7 (909) 967 30 30'}}
    </div>

    <div>
      <button onclick="window.renderPage('changeData')" class="change-data cursor-pointer no-styles">Изменить данные</button>
      <button  onclick="window.renderPage('changePassword')" class="change-data cursor-pointer no-styles">Изменить пароль</button>
      <button onclick="window.renderPage('authPage')" class="exit-in-profile-button cursor-pointer no-styles">Выйти</button>
    </div>
  
  </div>
</div>